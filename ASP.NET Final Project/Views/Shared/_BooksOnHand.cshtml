@using ASP.NET_Final_Project.Models;
@using System.Globalization;
@model BrowseByLocation

<table class="text-center">
    <tr>
        <th>Title</th>
        <th>Quantity On Hand</th>
    </tr>
    @for (int i = 0; i < Model.Books.Length; i++)
    {
        <tr>
            <td><a href="@Url.Action("BookDetails", "Home", new {id = Model.Books[i].BOOK_CODE})">@CultureInfo.CurrentCulture.TextInfo.ToTitleCase(Model.Books[i].TITLE)</a></td>
            <td>@Model.BooksOnHand[i]</td>
        </tr>
    }            
</table>
